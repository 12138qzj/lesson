<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tv_focus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_focus"
            android:layout_marginTop="10dp"
            android:text="尚硅谷官方"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_focus_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_focus"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="90dp"
            android:text="程序员标配，人手一套尚硅谷教程，自学sadjgsajgjgjsdag"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/colorGray_two"/>
        <TextView
            android:id="@+id/tv_focus_fans_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_focus"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="50dp"
            android:text="25.6万粉丝"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/colorGray_two"/>
        <Button
            android:id="@+id/btn_focus"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/focus_button"
            android:text="+ 关注"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:background="@color/colorGray"/>
    </RelativeLayout>
</RelativeLayout>