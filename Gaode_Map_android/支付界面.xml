<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信息确认"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_test1"
        android:layout_width="match_parent"
        android:layout_height="439dp"
        android:layout_weight="0.57">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_named"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="预约场馆："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_named"
                        android:layout_marginTop="0dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_named"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_objectd"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="预约类型："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_objectd"
                        android:layout_marginTop="0dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_object"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_objectd"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_dated"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="约定日期："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_dated"
                        android:layout_marginTop="0dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_dated"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_placed"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="约定场地："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_placed"
                        android:layout_marginTop="0dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_place"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_placed"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_center"
                android:layout_marginTop="30dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="100dp"

                        android:textSize="16sp"
                        />
                    <!-- 定义一组单选按钮 -->
                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_wx"
                            android:layout_width="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="40dp"
                            android:onClick="onClick"
                            android:src="@drawable/wx" />
                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="微信支付"

                            android:textSize="16sp"
                            android:checked="true"/>
                        <ImageView
                            android:id="@+id/iv_zfb"
                            android:layout_width="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="40dp"
                            android:onClick="onClick"
                            android:src="@drawable/zfb" />
                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:text="支付宝支付"
                            android:textSize="16sp"/>
                    </RadioGroup>
                </TableRow>
            </LinearLayout>

        </RelativeLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_competition_advisory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.24"
            android:onClick="onClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/price" />
            <!--android:layout_gravity="center_horizontal"-->
            <!--<TextView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:text="￥不可售卖"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="15sp" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_competition_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.13"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                android:text="40"
                android:textColor="@color/red"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_competition_booking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:onClick="onClick"
            android:orientation="vertical">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_inficommit"
                android:text="支付订单"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
